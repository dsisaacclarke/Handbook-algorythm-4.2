#include <iostream>
#include <vector>

int main() {
    int n;
    std::cin >> n;

    std::vector<int> A(n + 1);
    for (int i = n; i >= 0; --i) {
        std::cin >> A[i];
    }

    int m;
    std::cin >> m;

    std::vector<int> B(m + 1);
    for (int i = m; i >= 0; --i) {
        std::cin >> B[i];
    }

    int k = std::max(n, m);
    std::vector<int> C(k + 1, 0);

    for (int i = 0; i <= k; ++i) {
        if (i <= n) {
            C[i] += A[i];
        }
        if (i <= m) {
            C[i] += B[i];
        }
    }

    std::cout << k << "\n";

    for (int i = k; i >= 0; --i) {
        std::cout << C[i] << " ";
    }
}
